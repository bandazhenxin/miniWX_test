<view class='container'>
  <view class='detail'>
    <!--title-->
    <view class='title'>
      <text class='h'>{{detail.title}}</text>
      <text class='time'>{{detail.created_at}}</text>
    </view>

    <!--content-->
    <text class='content'>{{detail.contents}}</text>

    <!--btn-->
    <blcock wx:if='{{catalog == 3}}'>
      <view class='btn-area'>
        <button data-id='{{jid}}' bindtap='goDetail'>查看详情</button>
      </view>
    </blcock>
  </view>
</view>
