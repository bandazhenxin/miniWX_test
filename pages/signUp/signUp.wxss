/* pages/signUp/signUp.wxss */
page{
    height:100%;
}
.weui-tab .weui-bar__item_on .weui-navbar__title{
  color: #FF850B;
}
.weui-tab .weui-navbar__slider{
  background-color: #FF850B;
  width: 4rem;
}
.weui-tab__content{
  height: 100%;
}

/*职位列表*/
.job_item{
  padding: 0 44rpx;
  border-bottom: 22rpx solid #F1F1F1;
}
.job_item .btn-area{
  padding: 22rpx 0;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.job_item .btn-area button{
  font-size: 26rpx;
  border-radius: 8rpx;
  margin: 0;
  margin-left: 22rpx;
  white-space:nowrap;
}
.prohibit-btn{
  color: #FFFFFF;
  background-color: #C7C7C7;
}
.yellow-btn{
  color: #FFFFFF;
  background-color: #FF850B;
}
.white-btn{
  background-color: #FFFFFF;
  border:1rpx solid #FF850B;
  color: #FF850B;
}
.green-btn{
  color: #FFFFFF;
  background-color: #069842;
}
.del-btn{
  background-color: #FFFFFF;
  border:1rpx solid #8D8D8D;
  color: #8D8D8D;
}

/*职位*/
.scroll_item{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  padding-top: 22rpx;
  padding-bottom: 22rpx; 
  border-bottom: 2rpx solid #F5F5F5;
}
.scroll_item .item{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.scroll_item .item_title .title{
  font-size: 36rpx;
  color: #5D5D5D;
}
.scroll_item .item_title .position{
  font-size: 30rpx;
  color:#545454;
}
.scroll_item .item_condition{
  flex-wrap: wrap;
}
.scroll_item .item_condition .condition{
  font-size: 30rpx;
  color:#FF8914;
  width: 100%;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp:3;
  -webkit-box-orient: vertical;
  word-wrap:break-word;
  word-break:break-all;
  white-space:pre-wrap
}
.scroll_item .item_company,.scroll_item .item_tags{
  justify-content: flex-start;
  padding-top: 6rpx;
  padding-bottom: 6rpx; 
  flex-wrap: wrap;
}
.scroll_item .item_company .label{
  font-size: 16rpx;
  color: #FFFFFF;
  background-color: #149D4C;
  display: block;
  padding: 2rpx;
  margin-right: 10rpx;
}
.scroll_item .item_company .company{
  color: #C2C2C2;
  font-size: 24rpx;
}
.scroll_item .item_tags .tags_item{
  border: 1rpx solid #149D4C;
  color: #149D4C;
  font-size: 20rpx;
  padding-left:6rpx; 
  padding-right:6rpx; 
  margin-right: 10rpx;
  margin-bottom: 1rpx;
}