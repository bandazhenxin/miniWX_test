<template name='newsCard'>
  <view class='news_card' data-catalog="{{catalog}}" data-id="{{id}}" data-jid="{{job_id}}" bindtap='goDetail'>
    <view class='basic'>
      <image mode='widthFix' class='icon' src='{{laba}}'></image>
      <text class='time'>{{created_at}}</text>
      <view hidden='{{is_read}}' class="weui-badge weui-badge_dot" style="margin-left: 15px;margin-right: 5px;"></view>
    </view>
    <view class='content'>
      {{contents}}
    </view>
  </view>
</template>