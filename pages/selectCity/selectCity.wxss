/* pages/selectCity/selectCity.wxss */
/* 搜索区 */
.search{
  align-items: center;
  justify-content: space-between;
  padding: 0 44rpx;
}
.search .weui-search-bar__box{
  border-radius: 5px;
  width: 70%;
  background-color: #F1F1F1;
  height: 30px;
  border: 1px solid #e6e6ea;
}
.search button{
  color: #fff;
  background-color: #FF9123;
}

/* 索引展示区 */
#indexes{
  padding: 0 44rpx;
  font-size: 30rpx;
  color: #A3A3A3;
}

/* 索引导航 */
.indexes_nav{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  position: fixed;
  right: 44rpx;
  top: 180rpx;
  background-color: #F1F1F1;
  width: 1.6rem;
  border-radius: 0.8rem;
  padding: 0.65rem 0;
}
.indexes_nav text{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  width: 16px;
  height: 16px;
  padding: 2px;
  font-size: 0.7rem;
  border-radius: 8px;
  margin: 5rpx 0;
  z-index: 1;
}

/*城市列表*/
scroll-view{
  overflow: scroll;
  white-space: nowrap;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  top: 3.8rem;
  z-index: -1;
}
scroll-view .city_area{
  padding: 0 44rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
}
scroll-view .city_area text{
  font-size: 30rpx;
  padding: 12rpx 0;
}
scroll-view .city_area .indexes{
  color: #9F9F9F;
}
scroll-view .city_area .city_item{
  width: 100%;
  text-align: left;
  border-bottom: 1rpx solid #F4F4F4;
}