/* pages/personal/personal.wxss */
page {
  background-color: #F1F1F1;
} 

/* 头部 */
.basic_info{
  padding: 44rpx;
  background-color: #FFFFFF;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 22rpx;
}
.basic_info image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  border: 1rpx solid #FDB165;
  margin-right: 22rpx;
}
.basic_info .words{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
}
.basic_info .words .name{
  font-size: 28rpx;
  color:#6A6A6A;
}
.basic_info .words .phone{
  font-size: 26rpx;
  color: #B2B2B2;
}

/*菜单*/
.menu{
  background-color: #FFFFFF;
  padding: 0 44rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
}
.menu .menu_item{
  padding: 22rpx 0;
  border-bottom: 1rpx solid #F7F7F7;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.menu .menu_item .menu_icon{
  padding-left: 11rpx;
  width: 50rpx;
}
.menu .menu_item .menu_name{
  display: inline-block;
  width: 85%;
  text-align: left;
  font-size: 30rpx;
  color:#5B5B5B;
}

/**授权框**/
.display{
  position: fixed;
  width:100%;
  height: 100%;
  z-index: 100;
  background: rgba(0, 0, 0, 0.4);
}
.display .auth{
  position: absolute;
  bottom: 0;
  width: 100%;
  background-color: #FFFFFF;
  border-radius: 14rpx 14rpx 0 0;
}
.auth .title{
  width: 100;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 40rpx 40rpx 20rpx 40rpx;
}
.auth .title .iconfont{
  width: 120rpx;
}
.auth .title text{
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 0.8rem;
  color:#333;
  margin-left: 6rpx;
}
.auth .auth-btn{
  width: 70%;
  margin-bottom: 15px;
}