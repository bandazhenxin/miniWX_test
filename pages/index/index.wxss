/**index.wxss**/

/*全局*/
.color_active{
  color:#FF9B38;
}

/**封面**/
.default{
  position: fixed;
  width:100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.default image{
  width: 60%;
}

/**授权框**/
.display{
  position: fixed;
  width:100%;
  height: 100%;
  z-index: 100;
  background: rgba(0, 0, 0, 0.4);
}
.display .auth{
  position: absolute;
  bottom: 0;
  width: 100%;
  background-color: #FFFFFF;
  border-radius: 14rpx 14rpx 0 0;
}
.auth .title{
  width: 100;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 40rpx 40rpx 20rpx 40rpx;
}
.auth .title .iconfont{
  width: 120rpx;
}
.auth .title text{
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 0.8rem;
  color:#333;
  margin-left: 6rpx;
}
.auth .auth-btn{
  width: 70%;
  margin-bottom: 15px;
}

/**主ui**/
.moveContainer{
  position: fixed;
  height: 1680rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
movable-area movable-view{
  width: 100%;
  display: block;
}
.moveContainer .moveContainer_top{
  height: 320rpx;
  padding-left: 44rpx;
  padding-right: 44rpx; 
  padding-bottom: 22rpx;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}
.moveContainer .moveContainer_bottom{
  padding-top: 22rpx;
  padding-left: 44rpx;
  padding-right: 44rpx; 
  /* top: 340rpx; */
  height: 1340rpx;
  background-color: #FFFFFF;
}
scroll-view{
  height: 100%;
  overflow:scroll;
  white-space:nowrap;
}
#displayBlock{
  display: block;
  width: 100%;
  padding-bottom: 60%;
}
.weui-loadmore__tips_in-line{
  position: relative;
  top: -.9em;
  padding: 0 .55em;
  background-color: #FFFFFF;
  color: #999;
}

/*顶部*/
.top_position{
  justify-content: flex-start;
  line-height: 40rpx;
}
.top_position text{
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 700;
}
.top_banner{
  width: 100%;
  height: auto;
  display: flex;
  align-items: center;
  justify-content: center;
}
.top_banner image{
  width: 100%;
  height: auto;
}

/*搜索区*/
.search{
  width: 100%;
  display: flex;
  flex-direction: column;
  border-bottom: 2rpx solid #F5F5F5;
  padding-bottom: 32rpx; 
}
.search .item{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.search-input{
  margin-bottom: 18rpx;
}
.search-input .item-input{
  height: 30px;
  width: 70%;
  border-radius: 5px;
  background: #fff;
  border: 1px solid #e6e6ea;
}
.weui-search-bar__box{
  height:100%;
  background-color: #F1F1F1;
}
.search .screen_text{
  justify-content: space-between;
  align-items: center;
  margin-bottom: 44rpx;
  border: 1rpx solid #FF9B38;
  border-radius: 10rpx;
  padding: 8rpx 22rpx;
}
.search .screen_text .text{
  font-size: 28rpx;
  color: #FF9B38;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 85%;
}
.search .screen_text .top_del{
  justify-content: space-between;
  align-items: center;
}
.search .screen_text .top_del image{
  width: 30rpx;
  margin-right: 6rpx;
}
.search .screen_text .top_del text{
  font-size: 24rpx;
  color: #A0A0A0;
}
.search .screen{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  color: #FF9B38;
  border: 1px solid #FF9B38;
  height: 30px;
  padding: 5px 10px 5px 10px;
  border-radius: 4px;
}
.search .screen image{
  height:30px;
  margin-right: 3px;
}
.search .screen text{
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}
.search-sort{
  margin-bottom: 8px;
}
.search-sort text{
  display: block;
  font-size: 32rpx;
}
.search-tags view{
  font-size: 24rpx;
  color: #4D4D4D;
  margin: 6rpx 0;
  margin-right: 10px;
  padding: 5px 15px 5px 15px;
  background-color: #F1F1F1;
  border-radius: 3px;
  display: inline-block;
  position: relative;
}
.search-tags view icon{
  position:absolute;
  top:-8rpx;
  right:-8rpx;
  background-color: #FFFFFF;
}
.search-tags .tags_active{
  border: 1rpx solid #FF9123;
  color: #FF9123;
  background-color: #FFFFFF;
}

/*职位*/
.scroll_item{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  padding-top: 22rpx;
  padding-bottom: 22rpx; 
  border-bottom: 2rpx solid #F5F5F5;
}
.scroll_item .item{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.scroll_item .item_title .title{
  font-size: 36rpx;
  color: #5D5D5D;
}
.scroll_item .item_title .position{
  font-size: 30rpx;
  color:#545454;
}
.scroll_item .item_condition{
  flex-wrap: wrap;
}
.scroll_item .item_condition .condition{
  font-size: 30rpx;
  color:#FF8914;
  width: 100%;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp:3;
  -webkit-box-orient: vertical;
  word-wrap:break-word;
  word-break:break-all;
  white-space:pre-wrap
}
.scroll_item .item_company,.scroll_item .item_tags{
  justify-content: flex-start;
  padding-top: 6rpx;
  padding-bottom: 6rpx; 
  flex-wrap: wrap;
}
.scroll_item .item_company .label{
  font-size: 16rpx;
  color: #FFFFFF;
  background-color: #149D4C;
  display: block;
  padding: 2rpx;
  margin-right: 10rpx;
}
.scroll_item .item_company .company{
  color: #C2C2C2;
  font-size: 24rpx;
}
.scroll_item .item_tags .tags_item{
  border: 1rpx solid #149D4C;
  color: #149D4C;
  font-size: 20rpx;
  padding-left:6rpx; 
  padding-right:6rpx; 
  margin-right: 10rpx;
  margin-bottom: 1rpx;
}