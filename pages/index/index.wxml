<!--获取头像昵称-->
<block wx:elif="{{!hasBasicUserInfo}}">
  <view class='default'>
    <image
      src='../../style/images/banner/default.png'
      mode='widthFix'
    >default</image>
  </view>
  <view class='display'>
    <view class='auth'>
      <view class='title'>
        <image
          src='../../style/images/banner/default.png'
          mode='widthFix'
          class='iconfont'
        >logo</image>
        <text>申请使用</text>
      </view>
      <button 
        type="primary" 
        class='auth-btn weui-btn button-hover' 
        open-type="getUserInfo" 
        bindgetuserinfo="getUserInfo"
      >获取头像昵称</button>
    </view>
  </view>
</block>

