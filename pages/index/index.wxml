<!--首页搜索列表-->
<block wx:else>
  <movable-area class='moveContainer'>
    <!--header-->
    <movable-view direction="none" class="weui-flex moveContainer_top">
      <view class='top_position weui-flex'>
        <image
          src='../../style/images/icon/weizhi.png'
          mode='aspectFit'
          class='iconfont'
        >位置</image>
        <text>{{city}}</text>
        <image
          src='../../style/images/icon/xiala.png'
          mode='aspectFit'
          class='iconfont'
        >下拉</image>
      </view>
      <view class='top_banner'>
        <image
          src='../../style/images/banner/indexBanner.png'
          mode='widthFix'
        >banner</image>
      </view>
    </movable-view>

    <!--content-->
    <movable-view 
      direction="vertical" 
      damping="100" 
      inertia="true" 
      friction="0.2"
      class="page_block moveContainer_bottom"
      bindchange="backTop"
      out-of-bounds="true"
      y='{{list_position}}'
    >
      <!--搜索区-->
      <view class='search'>
        <view class='search-input item'>
          <view class="item-input">
            <view class="weui-search-bar__box">
              <icon class="weui-icon-search_in-box" size="14" type="search"></icon>
              <input class="weui-search-bar__input" bindtap='roof' placeholder="搜索" type="text">搜索</input>
            </view>
          </view>
          <view class='screen'>
            <image 
              src='../../style/images/icon/shaixuan.png'
              mode='aspectFit'
              class='iconfont'
            >筛选</image>
            <text>筛选</text>
          </view>
        </view>
        <view class='search-sort item'>
          <view class="{{(sort_name === 'is_recommend')?'color_active':''}}" data-sortname='is_recommend' data-sort='{{sort_is_recommend}}' bindtap='sortSearch'>最新推荐</view>
          <view class="{{(sort_name === 'salary_order')?'color_active':''}}" data-sortname='salary_order' data-sort='{{sort_salary_order}}' bindtap='sortSearch'>薪资排序</view>
          <view class="{{(sort_name === 'subsidy_order')?'color_active':''}}" data-sortname='subsidy_order' data-sort='{{sort_subsidy_order}}' bindtap='sortSearch'>补贴排序</view>
          <view class="{{(sort_name === 'reward_order')?'color_active':''}}" data-sortname='reward_order' data-sort='{{sort_reward_order}}' bindtap='sortSearch'>赏金排序</view>
        </view>
        <scroll-view  
          class='search-tags item'
          scroll-x='true'
        >
          <text>提供住宿</text>
          <text>加班补贴</text>
          <text>交通补助</text>
          <text>餐补</text>
          <text>包吃包住</text>
        </scroll-view >
      </view>
      <!--职位列表-->
      <scroll-view scroll-y="{{isScroll?true:false}}" scroll-top="0">
        <block wx:for="{{position_item}}" wx:key="id">
          <template is="positionItem" data="{{...item}}"/>
        </block>
        <view id='displayBlock'>
          
        </view>
      </scroll-view>
    </movable-view>
  </movable-area>
</block>
