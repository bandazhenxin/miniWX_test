<!--获取头像昵称-->
<block wx:if="{{!hasBasicUserInfo && canIUseUser}}">
  <view class='auth'>
    <button 
      type="primary" 
      class='auth-btn weui-btn button-hover' 
      open-type="getUserInfo" 
      bindgetuserinfo="getUserInfo"
    >获取头像昵称</button>
  </view>
</block>

<!--获取手机号-->
<block wx:elif="{{!hasUserPhone && canIUsePhone}}">
  <view class='auth'>
    <button 
      type="primary"
      class='auth-btn weui-btn button-hover' 
      open-type="getPhoneNumber" 
      bindgetuserinfo="getPhoneNumber"
    >获取手机号</button>
  </view>
</block>

